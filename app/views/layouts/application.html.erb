<!DOCTYPE html>
<html>
  <head>
    <title>EssentialWorkerAid</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%#= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
   </head>

  <body>
    <%if flash[:notice]%>
        <%=flash[:notice]%><br><br>
    <%end%>

    <%if flash[:error_messages]%>
      <%flash[:error_messages].each do |message|%>
        <%=message%><br><br>
      <%end%>    
    <%end%>

    <%= yield %>

    <footer><%=render partial: "layouts/nav_bar"%></footer>
  </body>
</html>
