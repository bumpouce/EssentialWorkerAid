<div class="jumbotron">
  <div class="container">
    <br><br><br><br><br><br>
    <p class="lead"><i>Connecting People</i></p>
    <h1 class="display-4">Welcome to EssentialWorkerAid</h1>
  </div>
</div>

<table style="width:100%">

<th><h2>For Essential Workers</h2></th>
<th><h2>For Supporters</h2></th>

<tr>
<td >
<p><%=link_to "Register a new Worker", new_worker_path%><br><br>
or </p>
<p><b>Sign In</b></p>
<%= form_tag '/worker_sign_in' do %>
  <p>
    <%= label_tag 'Username:' %><br />
    <%= text_field_tag :username %>
  </p>
  <p>
    <%= label_tag 'Password:' %><br />
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= submit_tag 'Sign In' %> 
  </p>
<% end %>
</td>


<td>
<p><%=link_to "Register a new Supporter", new_supporter_path%><br><br>
or</p>
<p><b>Sign In</b></p>
<%= form_tag '/supporter_sign_in' do %>
  <p>
    <%= label_tag 'Username:' %><br />
    <%= text_field_tag :username %>
  </p>
  <p>
    <%= label_tag 'Password:' %><br />
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= submit_tag 'Sign In' %> 
  </p>
<% end %>
</td>
</tr>
</table>